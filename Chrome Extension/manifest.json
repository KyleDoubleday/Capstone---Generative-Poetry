{
  "name": "Capstone - Generative Poetry",
  "manifest_version": 2,
  "version": "0.1",
  "options_page": "options.html",
  "permissions": [
    "activeTab",
	"storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Write Poem",
    "default_icon": "images/poet.png"
  }
}
